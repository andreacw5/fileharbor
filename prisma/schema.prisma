// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LocalFile {
  id          String  @id @default(uuid())
  filename    String
  path        String
  mimetype    String
  views       Int     @default(0)
  downloads   Int     @default(0)
  description String?

  @@map(name: "localFiles")
}
