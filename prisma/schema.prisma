generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Multi-tenant Client
model Client {
  id             String   @id @default(uuid())
  name           String
  apiKey         String   @unique
  domain         String?  @unique
  active         Boolean  @default(true)
  webhookEnabled Boolean  @default(false)
  webhookUrl     String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  users   User[]
  images  Image[]
  avatars Avatar[]
  albums  Album[]

  @@map("clients")
}

// User within a client
model User {
  id             String   @id @default(uuid())
  clientId       String
  externalUserId String // ID from client's application
  email          String?
  username       String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  client  Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  images  Image[]
  avatars Avatar[]
  albums  Album[]

  @@unique([clientId, externalUserId])
  @@index([clientId])
  @@index([externalUserId])
  @@map("users")
}

// Image entity
model Image {
  id           String    @id @default(uuid())
  clientId     String
  userId       String
  originalName String
  storagePath  String // e.g., storage/domain/images/{imageId}
  format       String // webp, jpeg, png
  width        Int
  height       Int
  size         Int // bytes
  mimeType     String
  isOptimized  Boolean   @default(false)
  optimizedAt  DateTime?
  isPrivate    Boolean   @default(false)
  tags         String[] // Array of textual tags
  views        Int       @default(0)
  downloads    Int       @default(0)
  description  String?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  // Relations
  client      Client           @relation(fields: [clientId], references: [id], onDelete: Cascade)
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  albumImages AlbumImage[]
  shareLinks  ImageShareLink[]

  @@index([clientId])
  @@index([userId])
  @@index([isOptimized])
  @@index([isPrivate])
  @@map("images")
}

// Avatar entity - one active per user per client
model Avatar {
  id          String    @id @default(uuid())
  clientId    String
  userId      String
  storagePath String // e.g., storage/domain/avatars/{userId}
  format      String
  width       Int
  height      Int
  size        Int
  mimeType    String
  isOptimized Boolean   @default(false)
  optimizedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Relations
  client Client @relation(fields: [clientId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([clientId, userId]) // Only one active avatar per user
  @@index([clientId])
  @@index([userId])
  @@map("avatars")
}

// Album entity
model Album {
  id          String   @id @default(uuid())
  clientId    String
  userId      String
  name        String
  description String?
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  client      Client       @relation(fields: [clientId], references: [id], onDelete: Cascade)
  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  albumImages AlbumImage[]
  albumTokens AlbumToken[]

  @@index([clientId])
  @@index([userId])
  @@index([isPublic])
  @@map("albums")
}

// Many-to-many relationship between Album and Image
model AlbumImage {
  id        String   @id @default(uuid())
  albumId   String
  imageId   String
  order     Int      @default(0)
  createdAt DateTime @default(now())

  // Relations
  album Album @relation(fields: [albumId], references: [id], onDelete: Cascade)
  image Image @relation(fields: [imageId], references: [id], onDelete: Cascade)

  @@unique([albumId, imageId])
  @@index([albumId])
  @@index([imageId])
  @@map("album_images")
}

// Token for private album access
model AlbumToken {
  id        String    @id @default(uuid())
  albumId   String
  token     String    @unique
  expiresAt DateTime?
  createdAt DateTime  @default(now())

  // Relations
  album Album @relation(fields: [albumId], references: [id], onDelete: Cascade)

  @@index([albumId])
  @@index([token])
  @@map("album_tokens")
}

// Token for private image sharing
model ImageShareLink {
  id        String    @id @default(uuid())
  imageId   String
  readToken String    @unique
  createdAt DateTime  @default(now())
  expiresAt DateTime?

  // Relations
  image Image @relation(fields: [imageId], references: [id], onDelete: Cascade)

  @@index([imageId])
  @@index([readToken])
  @@map("image_share_links")
}
